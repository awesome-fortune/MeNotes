<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/noteListFragment">

    <fragment
        android:id="@+id/noteListFragment"
        android:name="za.co.masekofortune.menotes.ui.notelist.NoteListFragment"
        android:label="Note list"
        tools:layout="@layout/fragment_note_list">
        <action
            android:id="@+id/action_noteListFragment_to_noteItemFragment"
            app:destination="@id/noteItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteItemFragment"
        android:name="za.co.masekofortune.menotes.ui.noteitem.NoteItemFragment"
        android:label="Note item"
        tools:layout="@layout/fragment_note_item">
        <argument
            android:name="noteId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
</navigation>